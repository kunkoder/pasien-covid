<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_subtitle"
        android:layout_marginTop="-16dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="DAFTAR PASIEN"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colorGrey"/>

    <TextView
        android:id="@+id/home_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/playfairdisplay_bold"
        android:text="Covid-19 Kota Bogor"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/foto_home"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:minHeight="100dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/main"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/to_pasien"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:text="Pasien"
            android:textStyle="bold"
            android:background="@drawable/tombol_bulat"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:onClick="toPasien"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:text="Pengembang"
            android:textStyle="bold"
            android:background="@drawable/tombol_bulat"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:onClick="toPengembang"/>

    </RelativeLayout>

</RelativeLayout>